      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Ejemplos en móvil"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*", ".md", ".mdx"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/markdown": [".md", ".mdx"],
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+sysrot",
      "url": "/protocol-handler?url=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "related_applications": [
    {
      "platform": "web",
      "url": "https://sysrot-hub.com/"
    },
    {
      "platform": "webapp",
      "url": "https://sysrot-hub.com/manifest.json"
    }
  ],
  "prefer_related_applications": false
}